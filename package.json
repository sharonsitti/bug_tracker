{
  "name": "bug_tracker",
  "version": "1.0.0",
  "description": "A simple bug tracking application",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "cd apps/server && npm run dev",
    "dev:client": "cd apps/client && npm start",
    "install:all": "npm install && cd apps/server && npm install && cd ../client && npm install",
    "build": "cd apps/server && npm run build && cd ../client && npm run build",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sharonsitti/bug_tracker.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/sharonsitti/bug_tracker/issues"
  },
  "homepage": "https://github.com/sharonsitti/bug_tracker#readme",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
